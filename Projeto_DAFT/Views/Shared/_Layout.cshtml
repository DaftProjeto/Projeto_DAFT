<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Projeto_DAFT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Projeto_DAFT.styles.css" asp-append-version="true" />
</head>
<body>
    <header >
        <nav style="background-color:#00648C; height:80px;" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div style="margin-left:80px; margin-right:80px" class="container-fluid">
                <a href="https://www.fatectq.edu.br/" target="_blank">
                <img class="navbar-brand" width="120px;" src="/Imagens/Logo_Fatec.png" asp-area="" asp-controller="Home" asp-action="Index">
                </a>
                <a href="/Home/Index">
                    <img src="/Imagens/Logo_DAFT.png" width="130px" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li  class="nav-item">
                            
                            <a style="font-size:25px; margin-left:30px; color:white" class="nav-link" asp-area="" asp-controller="Home" asp-action="Gerenciador_Projetos">Gerenciamento de Projetos</a>
                            
                        </li>
                        
                    </ul>
                    <li class="navbar nav-item">
                        <img src="/Imagens/Login.png" width="80px" style="margin:0 auto" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">
                    </li>
                </div>
                <a>
                    
                </a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="background-color: #00648C; height:80px;" class="border-top footer text-muted">
        <div style="margin-left:80px; margin-right:80px" class="container">
            &copy; 2023 - Projeto_DAFT - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

